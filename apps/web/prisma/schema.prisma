// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id             String   @id
  name           String
  description    String?
  status         String   // confirmed, rumored, expired, speculative
  logoUrl        String?
  websiteUrl     String?
  twitterUrl     String?
  criteria       Json     // Array of eligibility criteria
  chains         String[] // Array of chain names
  estimatedValue String?
  snapshotDate   String?
  claimUrl       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([status])
  @@map("projects")
}

